- @commits.group_by { |c| c.committed_date.to_date }.sort.reverse.each do |day, commits|
  .ui-box.small-box
    .title
      %i.icon-calendar
      %span= day.stamp("28 Aug, 2010")
      .pull-right
        %small= pluralize(commits.count, 'commit')
    %ul.well-list= render commits, project: @project
